{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["plugin:react/recommended", "airbnb"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"linebreak-style": ["error", "unix"],
		"react/jsx-props-no-spreading": [
			"off",
			{
				"html": "ignore",
				"custom": "ignore",
				"explicitSpread": "ignore"
			}
		]
	}
}
